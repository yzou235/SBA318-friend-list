<%- include('layout/header') %>

<div class="container">
    <h1 style = "margin-top:15px;">Contact</h1>
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr style="background-color: #6495ED; color: white;">
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Birthday</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% friends.forEach(friend => { %>
                            <tr>
                                <td style="vertical-align: middle;"><%= friend.id %></td>
                                <td style="vertical-align: middle;"><img src="<%= friend.image %>" alt="<%= friend.name %>" style="max-width: 100px; max-height: 100px; width: auto; height: auto;"></td>
                                <td style="vertical-align: middle;"><%= friend.name %></td>
                                <td style="vertical-align: middle;"><%= friend.dob %></td>
                                <td style="vertical-align: middle;"><%= friend.email %></td>
                                <td style="vertical-align: middle;"><%= friend.phone %></td>
                                <td style="vertical-align: middle;">
                                    <a href="api/posts/<%= friend.id %>" style="color: #73746b; "><i class="fas fa-eye fa-lg mx-1"></i></a>
                                    <a href="" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>    
        </div>
    </div>
</div>

<%- include('layout/footer') %>